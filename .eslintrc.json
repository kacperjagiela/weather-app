{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"airbnb",
		"eslint-config-airbnb-base"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	},
	"plugins": [
		"babel",
		"react"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": 0,
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"react/jsx-indent": [
			"error",
			"tab"
		],
		"react/jsx-indent-props": [
			"error",
			"tab"
		],
		"react/state-in-constructor": [
			0,
			"never"
		],
		"react/prop-types": 0
	}
}